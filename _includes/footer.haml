%footer.footer
  %ul
    {{ if site.contact }}
    {% for data in site.contact %}
    %li
      %a{:href => "{{ data[1] }}", :rel => "me", :target => "_blank", :title => "{{ site.title }} on {{ data[0] }}"} {{ data[0] }}
    {% endfor %}
    {{ endif }}
    %li.copyright
      \&copy;{{ site.time | date: '%Y' }}
      %a{:href => "mailto: + {{ site.email }} + ?subject%3DWebsite%20Inquiry", :target => "_blank", :title => "Email {{ site.title }}"} {{ site.title }}