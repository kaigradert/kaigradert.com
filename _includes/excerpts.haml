{% for post in site.posts %}
%article.excerpt

  -# QUOTE
  {% if post.meta['type'] == "quote" %}
  %blockquote
    %p
      {{ post.body | strip_html }}
      {% if post.meta['source'] %}
      %footer
        &ndash;
        {% if post.meta['link'] %}
        %a{:href => "{{ post.meta['link'] }}", :target => "_blank"}
          {{ post.meta['source'] }}
        {% else %}
        {{ post.meta['source'] }}
        {% endif %}
      {% endif %}

  -# ARTICLE
  {% else %}
  %h2
    %a{:href => "{{ post.url }}"} {{ post.title | smartypants }}

  -# TAGS
  {% if post.tags != null %}
  %ul.tags_excerpt
    {% for tag in post.tags %}
    %li
      %a{:href => "/{{ site.tag_page_dir }}/{{ tag | slugify: 'pretty' }}/"} {{ tag }}
    {% endfor %}
  {% endif %}

  -# TIME
    %time {{ post.date | date: "%B %-d, %Y" }}

  -# HERO IMAGE
  {% if post.images.size > 0 %}
  %figure
    %a{:href => "{{ post.url }}"}
      %img{:alt => "{{ post.title }}", :src => "{{ post.images%html{:class => "no-js {% if parent %}parent-{{ parent.slug }} {% endif %}page-{{ page.title | downcase }} day-{{ site.time | date: '%w' }}", :lang => "en"}.path }}"}
  {% endif %}

  -# EXCERPT
  {% if post.content %}
  {% capture content_full %}{{ post.content | strip_html }}{% endcapture %}
  {% capture content_truncated %}{{ content_full | truncatewords: 50, '&hellip;' }}{% endcapture %}
  %p
    {{ content_truncated }}
    {% if content_full != content_truncated %}
    %a.more{:href => "{{ post.url }}", :title => "{{ post.title }}"} read all
    {% endif %}

  {% endif %}
  {% endif %}

{% endfor %}