%article{:class => "{% if page.lede == 'yes' %}lede{% endif %}"}

  %h2 {{ page.title | smartypants }}
  {% if content %}
  {{ content }}
  {% endif %}

{% for project in work.posts %}
%a{:name => "{{post.slug}}"}
%article.project
  %figure

    {% for asset in project.assets %}
    %img{:alt => "{{ project.title }}", :src => "{{ asset.url }}"}
    {% endfor %}

    {% if project.body %}
    %figcaption {{ project.body }}
    {% endif %}

  {% if project.meta %}
  %dl.meta
    {% for data in project.meta %}
    %div
      %dt {{ data.key }}
      %dd {{ data.value }}
    {% endfor %}
  {% endif %}

{% endfor %}